{
  "flask": {
    "ENVIRONMENT": "development",
    "DEBUG": true,
    "SERVER_NAME": "127.0.0.1:8080",
    "SQLALCHEMY_DATABASE_URI": "sqlite:///db.sqlite3"
  },
  "logging": {
    "level": "CRITICAL",
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
      "std": {
        "()": "application.config.logging_config.StdFormatter",
        "fmt": "<colorstart>[%(levelname).3s]<colorend> [%(asctime)s] :: %(message)s",
        "datefmt": "%H:%M:%S"
      },
      "json": {
        "()": "application.config.logging_config.JsonFormatter",
        "keys": {
          "level": "levelname",
          "message": "message",
          "timestamp": "timestamp",
          "logger": "name",
          "module": "module",
          "function": "funcName",
          "line": "lineno",
          "thread_name": "threadName"
        }
      }
    },
    "filters": {
      "dismiss_errors": {
        "()": "application.config.logging_config.DismissErrorsFilter"
      }
    },
    "handlers": {
      "stdout": {
        "level": "DEBUG",
        "class": "logging.StreamHandler",
        "stream": "ext://sys.stdout",
        "formatter": "std",
        "filters": [
          "dismiss_errors"
        ]
      },
      "stderr": {
        "level": "WARNING",
        "class": "logging.StreamHandler",
        "stream": "ext://sys.stderr",
        "formatter": "std"
      },
      "file": {
        "level": "DEBUG",
        "class": "logging.handlers.RotatingFileHandler",
        "filename": "logs/app.log.jsonl",
        "formatter": "json",
        "maxBytes": 10485760,
        "backupCount": 10
      }
    },
    "loggers": {
      "root": {
        "level": "DEBUG",
        "handlers": [
          "stdout",
          "stderr",
          "file"
        ]
      }
    }
  }
}